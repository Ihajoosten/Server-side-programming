@model Client.Models.Account.RegisterViewModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Luc Joosten">
    <title>Easy Meal - Register</title>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="~/css/account/register.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Navigation -->
    @await Html.PartialAsync("_NavbarPartial")

    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-sm-5 mx-auto m-4">
                    <h3 class="text-center mb-3">Register - Customer</h3>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row">
                            <input id="input-register" asp-for="FirstName" class="col form-control m-2" type="text" name="FirstName" placeholder="First Name">
                            <input id="input-register" asp-for="LastName" class="col form-control m-2" type="text" name="LastName" placeholder="Last Name">
                        </div>
                        <div class="row">

                            <input id="input-register" asp-for="Email" class="col form-control m-2" type="email" name="Email" placeholder="E-mail">
                            <input id="input-register" asp-for="Birthday" class="col form-control m-2" name="Birthday">
                        </div>

                        <div class="row">

                            <input id="input-register" asp-for="City" class="col-4 form-control m-2" type="text" name="City" placeholder="City">
                            <input id="input-register" asp-for="Street" class="col form-control m-2" type="text" name="Street" placeholder="Street">
                        </div>
                        <div class="row">
                            <input id="input-register" asp-for="HouseNumber" class="col-4 form-control m-2" type="number" name="HouseNumber" placeholder="Housenumber">
                            <input id="input-register" asp-for="Addition" class="col-3 form-control m-2" type="text" name="Addition" placeholder="Addition">
                            <input id="input-register" asp-for="PostalCode" class="col form-control m-2" type="text" name="PostalCode" placeholder="Postal code">
                        </div>
                        <div class="row">

                            <input id="input-register" asp-for="Password" class="form-control m-2" type="password" name="Password" placeholder="Password">
                            <input id="input-register" asp-for="ConfirmPassword" class="form-control m-2" type="password" name="ConfirmPassword" placeholder="Confirm password">
                        </div>

                        <div class="row">
                            <div class="col">
                                <label>Gluten diet</label>
                                <input type="checkbox" asp-for="Gluten" name="Gluten" />
                            </div>
                            <div class="col">
                                <label>Saltless diet</label>
                                <input type="checkbox" asp-for="Salt" name="Gluten" />
                            </div>
                            <div class="col">
                                <label>Diabetes diet</label>
                                <input type="checkbox" asp-for="Diabetes" name="Gluten" />
                            </div>
                        </div>


                        <div class="row form-button text-center">
                            <button id="submit" type="submit" class="btn btn-outline-warning col m-2 mb-2">Register</button>
                        </div>
                        <div class="text-center">
                            <a asp-controller="Account" asp-action="Login">Already an account? Sign in!</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    @await Html.PartialAsync("_FooterPartial")
</body>
</html>
