@using Domain.Extensions;
@model Client.Models.Cart.CartViewModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Luc Joosten">
    <title>Easy Meal - Cart Summary</title>
    <link rel="icon" href="~/img/website_icon.jpg">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/css/order/cartSummary.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Navigation -->
    @await Html.PartialAsync("_NavbarPartial")

    <section id="order">
        <div class="container ">
            <div class="row">
                <div id="detailForm" class="col-sm-8 offset-sm-2 p-sm-5 bg-white rounded shadow mb-5">
                    <h2><span>Cart summary</span></h2>
                    <span>@Model.Cart.Lines.Count() meal(s)</span>
                    <div class="mt-4">
                        @for (int x = 0; x < Model.Cart.Lines.Count(); x++)
                        {
                            <span><b>@Model.Cart.Lines[x].Meal.DateValid.ToString("dd MMM yyyy")</b></span>
                            <div class="p-2">
                                @foreach (var item in Model.Cart.Lines)
                                {
                                    @foreach (var dish in item.Meal.Dishes)
                                    {
                                        <label>@dish.Dish.Name</label>
                                    }
                                    <div class="col mb-3">
                                        <div style="border-bottom: 1px solid">
                                            <label style="width: 100%">
                                                <span style="display:inline; padding-left:40px;">size:
                                                    <select class="form-control-sm">
                                                        <option value="0">Small (-20%)</option>
                                                        <option value="1">Medium (+- 0%)</option>
                                                        <option value="2">Large (+ 20%)</option>
                                                    </select>
                                                </span>
                                                <span style="display: inline; float: right; padding-left: 15px"><button class="btn btn-sm"><i style="color: red;" class="fas fa-trash"></i></button></span>
                                                <!-- Show dish price based on size (+- 20%) -->
                                                <span style="display: inline; float: right">€ 7.99</span>
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    <hr />
                    <div class="col">
                        <div class="p-2">
                            <label style="width: 100%">
                                <!-- Get toal order price not including discounts -->
                                Total: <span style="display: inline; float: right">€ 307.99</span>
                            </label>
                            <label style="width: 100%">
                                <!-- Check if it is the clients birthday -->
                                Birthday: <span style="display: inline; float: right">€ 0</span>
                            </label>
                            <div class="mt-3">
                                <label style="width: 100%">
                                    <!-- Get total order price including discounts -->
                                    <b>Sub-total:<span style="display: inline; float: right">€ 307.99</span></b>
                                </label>
                            </div>
                        </div>

                    </div>
                    <div class="col text-right mt-2">
                        <a asp-controller="Order" asp-action="Checkout"><button class="btn btn-sm btn-success">Procceed to checkout</button></a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    @await Html.PartialAsync("_FooterPartial")
</body>
</html>
