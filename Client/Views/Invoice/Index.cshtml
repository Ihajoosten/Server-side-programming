@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Luc Joosten">
    <title>Easy Meal - Invoices</title>
    <link rel="icon" href="~/img/website_icon.jpg">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/invoice/indexPage.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Navigation -->
    @await Html.PartialAsync("_NavbarPartial")

    <section id="invoices">
        <div class="container">
            <div class="row">
                <div class="scrollmenu">
                    @for (int y = 0; y < 4; y++)
                    {
                        <div id="detailForm" style="display:inline-block;" class="col-sm-6 offset-sm-2 p-sm-5 bg-white rounded shadow mb-5">
                            <h2><span>Invoice 28 Jan 2020</span></h2>
                            <span>4 meal(s)</span>
                            <div class="mt-4">
                                @for (int x = 0; x < 2; x++)
                                {
                                    <span><b>Monday</b></span>
                                    <div class="p-2">
                                        @for (int i = 0; i < 3; i++)
                                        {
                                            <div class="col mb-3">
                                                <div style="border-bottom: 1px solid">
                                                    <label style="width: 100%">
                                                        Chicken Coktail
                                                        <span style="display:inline; padding-left:40px;">
                                                            size: medium
                                                        </span>
                                                        <span style="display: inline; float: right">€ 7.99</span>
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                            <hr />
                            <div class="col">
                                <div class="p-2">
                                    <label style="width: 100%">
                                        <!-- Get toal order price not including discounts -->
                                        Total: <span style="display: inline; float: right">€ 307.99</span>
                                    </label>
                                    <br />
                                    <label style="width: 100%">
                                        <!-- Check if it is the clients birthday -->
                                        Birthday: <span style="display: inline; float: right">€ 0</span>
                                    </label>
                                    <br />
                                    <label style="width: 100%">
                                        <!-- Check if it the client has more than 15 orders placed -->
                                        Discount: 15% (more than 15 orders placed)<span style="display: inline; float: right">€ 46.20</span>
                                    </label>
                                    <div class="mt-3">
                                        <label style="width: 100%">
                                            <!-- Get total order price including discounts -->
                                            <b>Sub-total:<span style="display: inline; float: right">€ 261.79</span></b>
                                        </label>
                                    </div>
                                </div>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    @await Html.PartialAsync("_FooterPartial")
</body>
</html>
