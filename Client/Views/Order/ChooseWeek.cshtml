@model Client.Models.Account.ChooseWeekViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Luc Joosten">
    <title>Easy Meal - Choose week</title>
    <link rel="icon" href="~/img/website_icon.jpg">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="~/css/order/chooseWeek.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Navigation -->
    @await Html.PartialAsync("_NavbarPartial")

    <section id="order">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-5 mx-auto m-5">
                    <label><h2 class="text-black-50">Select for wich week you want to order your meals.</h2></label>
                    <br />
                    <hr />
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group col">
                                <label>From</label>
                                <input asp-for="Start" class="input-sm form-control" name="Start" />
                            </div>
                            <div class="form-group col">
                                <label>To</label>
                                <input asp-for="End" class="input-sm form-control" name="End" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <a asp-controller="Order" asp-action="ChooseWeek"><button type="submit" class="btn btn-success">Next</button></a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    @await Html.PartialAsync("_FooterPartial")
</body>
</html>
