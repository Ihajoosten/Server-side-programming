@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Luc Joosten">
    <title>Easy Meal - Order step</title>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="~/css/orderMeal.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Navigation -->
    @await Html.PartialAsync("_NavbarPartial")

    <section id="order">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <label><h2 class="text-black-50">Order meals for week 1</h2></label>
                    <br />
                    <hr />
                    <div class="input-daterange input-group" id="datepicker">
                        <div class="row m-2">
                            @for (int i = 0; i < 7; i++)
                            {
                                <div class="col-lg-4 mt-3">
                                    <label class="control-label">@Enum.Parse(typeof(DayOfWeek), "" + i)</label>
                                    <select class="form-control">
                                        <option>Dish, Dish, Dish</option>
                                    </select>
                                </div>
                            }
                        </div>
                        <div class="row m-2 mt-3">
                            <div class="col-md">
                                <a asp-controller="Order" asp-action="Order"><button class="btn btn-success">Save Menu</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    @await Html.PartialAsync("_FooterPartial")

</body>
</html>
