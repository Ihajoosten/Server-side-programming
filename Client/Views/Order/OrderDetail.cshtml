@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Luc Joosten">
    <title>Easy Meal - Order Detail</title>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="~/css/orderMeal.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Navigation -->
    @await Html.PartialAsync("_NavbarPartial")

    <section id="order">
        <div class="container p-5">
            <div class="row">
                <div class="col-8 offset-md-2 p-5 bg-white rounded shadow mb-5">
                    <h2><span>Order details</span></h2>
                    <span>4 meal(s)</span>
                    <div class="mt-4">
                        @for (int x = 0; x < 3; x++)
                        {
                            <span><b>Monday</b></span>
                            <div class="p-2">
                                @for (int i = 0; i < 3; i++)
                                {
                                    <div class="col mb-3">
                                        <div style="border-bottom: 1px solid">
                                            <label style="width: 100%">
                                                Chicken Coktail
                                                <span style="display: inline; float: right">€ 7.99</span>
                                            </label>
                                        </div>
                                        <span style="font-size: 12px; display: inline; float: initial"><i>Medium</i></span>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    <hr />
                    <div class="col">
                        <div class="p-2">
                            <label style="width: 100%">
                                Total: <span style="display: inline; float: right">€ 307.99</span>
                            </label>
                            <label style="width: 100%">
                                Birthday: <span style="display: inline; float: right">€ 0</span>
                            </label>
                            <div class="mt-3">
                                <label style="width: 100%">
                                    <b>Sub-total:<span style="display: inline; float: right">€ 307.99</span></b>
                                </label>
                            </div>
                        </div>

                    </div>
                    <div class="col text-right mt-2">
                        <a asp-controller="Order" asp-action="Delivery"><button class="btn btn-sm btn-success">Next</button></a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    @await Html.PartialAsync("_FooterPartial")
</body>
</html>
