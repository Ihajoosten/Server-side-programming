@inject SignInManager<Domain.Client> signInManager;

<!-- Navigation -->
<nav class="navbar navbar-expand-sm bg-light fixed-top" id="mainNav">
    <div class="container text-black-50">
        <img src="~/img/EasyMeal_icon.svg" height="50" width="50" alt="Logo" class="text-center" />
        <a class="navbar-brand js-scroll-trigger text-center ml-2" style="font-size:25px; color: orange" asp-controller="Home" asp-action="Index">Easy Meal</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-sm-auto mt-2">
                @if (!signInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Account" asp-action="Login">
                            <button style="color: #ffa500" class="btn js-scroll-trigger m-1">Login</button>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Account" asp-action="Register">
                            <button style="color: #ffa500" class="btn js-scroll-trigger m-1">Register</button>
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Account" asp-action="Logout">
                            <button style="color: #ffa500" class="btn js-scroll-trigger m-1">Logout</button>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
