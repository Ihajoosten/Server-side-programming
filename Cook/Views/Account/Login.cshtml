@model Cook.Models.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Luc Joosten">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="~/css/landing.css" rel="stylesheet">
    <link href="~/css/login.css" rel="stylesheet" />
</head>

<body id="page-top">

    <!-- Navigation -->
    @await Html.PartialAsync("_NavbarPartial")

    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 mx-auto m-5">
                    <h3 class="text-center mb-3">Login - Cook</h3>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input id="input-login" asp-for="Email" class="form-control m-2" type="text" placeholder="E-mail Address" required>
                        <input id="input-login" asp-for="Password" class="form-control m-2" type="password" name="password" placeholder="Password" required>
                        <input asp-for="RememberMe" class="m-2" type="checkbox" id="chk1"><label for="chk1">Remeber me</label>
                        <div class="form-button text-center">
                            <a asp-controller="Account" asp-action="Login">
                                <button type="submit" class="btn btn-outline-warning col m-2 mb-2">Login</button>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    @await Html.PartialAsync("_FooterPartial")
</body>
</html>
