@model Cook.Models.Account.RegisterViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Luc Joosten">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="~/css/landing.css" rel="stylesheet">
    <link href="~/css/login.css" rel="stylesheet" />
</head>

<body id="page-top">

    <!-- Navigation -->
    @await Html.PartialAsync("_NavbarPartial")

    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 mx-auto m-4">
                    <h3 class="text-center mb-3">Register - Cook</h3>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input id="input-login" asp-for="FirstName" class="form-control m-2" type="text" name="FirstName" placeholder="First Name" >
                        <input id="input-login" asp-for="LastName" class="form-control m-2" type="text" name="LastName" placeholder="Last Name" >
                        <input id="input-login" asp-for="Email" class="form-control m-2" type="email" name="Email" placeholder="E-mail Address" >
                        <input id="input-login" asp-for="Password" class="form-control m-2" type="password" name="Password" placeholder="Password" >
                        <input id="input-login" asp-for="ConfirmPassword" class="form-control m-2" type="password" name="ConfirmPassword" placeholder="Confirm password" >

                        <div class="form-button text-center">
                            <button id="submit" type="submit" class="btn btn-outline-warning col m-2 mb-2">Register</button>
                        </div>
                        <div class="text-center">
                            <a asp-controller="Account" asp-action="Login">Already an account? Sign in!</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    @await Html.PartialAsync("_FooterPartial")
</body>
</html>
