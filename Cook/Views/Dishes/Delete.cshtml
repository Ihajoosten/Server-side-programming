@model Domain.Dish

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Luc Joosten">
    <title>Delete</title>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="~/css/landing.css" rel="stylesheet">
    <link href="~/css/dish/delete.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation -->
    @await Html.PartialAsync("_NavbarPartial")
    <header>
        <div class="container">
            <div class="row">
                <div class="col-sm-8 offset-sm-2">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Dishes" asp-action="Index">Dishes</a></li>
                        <li class="breadcrumb-item">Delete</li>

                    </ol>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 text-center">
                <h1>Delete Dish #@Model.Id</h1>
                <div class="col-md card-header-pills mt-4">
                    @{
                        var base64 = Convert.ToBase64String(@Model.Image);
                        var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                    }
                    <img src="@imgsrc" class="card-img-top" alt="Dish image" height="200" width="auto">
                    <div class="card-body text-black-50">
                        <h6 class="card-title text-white-50">@Model.Name</h6>
                        <p class="card-text text-white-50" style="width: auto; height: 50px; overflow:auto;">@Model.Description</p>
                        <div class="mt-3">
                            <p class="badge badge-pill badge-secondary card-text">@Model.Type</p>
                            <p class="badge badge-pill badge-primary card-text ">€@String.Format("{0:0.00}", Model.Price)</p>
                            <p class="badge badge-pill badge-warning card-text"><i class="fas fa-exclamation-triangle" style="margin-right:5px;"></i>@Model.Restriction</p>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" />
                    <a asp-action="Index"><button class="btn btn-sm btn-outline-secondary">Back</button></a>
                </form>
            </div>
        </div>
    </div>
    <!-- Footer -->
    @await Html.PartialAsync("_FooterPartial")
</body>
</html>


