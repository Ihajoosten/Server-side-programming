@{
    ViewData["Title"] = "Dashboard";
    Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Luc Joosten">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="~/css/landing.css" rel="stylesheet">
    <link href="~/css/dish/index.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    @await Html.PartialAsync("_NavbarPartial")

    <header>
        <div class="container">
            <div class="row">
                <div class="col-sm-8 offset-sm-2">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Dishes" asp-action="Index">Dishes</a></li>
                        <li class="breadcrumb-item">Index</li>

                    </ol>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row offset-md-2">
            <div class="col-md-10 content">
                <a asp-controller="Dishes" asp-action="Create"><button class="btn btn-outline-warning text-center">+ New Dish</button></a>
                <div class="row mt-4">
                    @for (int i = 0; i < 6; i++)
                    {
                        <div class="col-md-4 card-header-pills mr-1 mb-3">
                            <img src="~/img/carousel_item_1.jpg" class="card-img-top" alt="...">
                            <div class="card-body text-black-50">
                                <h5 class="card-title text-white-50">Card title</h5>
                                <p class="card-text text-white-50">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                <div class="text-center">
                                    <button id="dishButton" class="btn btn-sm btn-outline-warning text-center">Edit</button>
                                    <button id="dishButton" class="btn btn-sm btn-outline-danger text-center">Delete</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_FooterPartial")
</body>
</html>