@{
    ViewData["Title"] = "Dashboard";
    Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Luc Joosten">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="~/css/landing.css" rel="stylesheet">
    <link href="~/css/dashboard.css" rel="stylesheet" />
</head>
<body>
    @await Html.PartialAsync("_NavbarPartial")

    <header>
        <div class="container">
            <div class="row">
                <div class="col-sm-8 offset-sm-2">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </header>

        <div class="container">
            <div class="row offset-md-2">
                <div class="col-md-2 text-center sidebar">
                    <a class="active" href="#home">Home</a>
                    <a asp-controller="Menus" asp-action="Index">Menus</a>
                    <a asp-controller="Meals" asp-action="Index">Meals</a>
                    <a asp-controller="Dishes" asp-action="Index">Dishes</a>
                </div>
                <div class="col-md-7 content">
                    <h3>Responsive Sidebar Example</h3>
                    <p>This example use media queries to transform the sidebar to a top navigation bar when the screen size is 700px or less.</p>
                    <p>We have also added a media query for screens that are 400px or less, which will vertically stack and center the navigation links.</p>
                    <h4>Resize the browser window to see the effect.</h4>
                    <br />
                    <hr />
