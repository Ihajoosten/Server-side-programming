@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/img/EasyMeal_icon.svg" rel="icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/font-awesome/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/landing.css">
</head>
<body>
    @await Html.PartialAsync("_NavbarPartial")
    <div class="form-body">
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items">
                        <h3 class="text-center">Login Cook</h3>
                        <div class="page-links text-center">
                            <a asp-area="" asp-controller="Home" asp-action="Login" class="active">Login</a>
                            <a asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                        </div>
                        <form>
                            <input class="form-control" type="text" name="username" placeholder="E-mail Address" required>
                            <input class="form-control" type="password" name="password" placeholder="Password" required>
                            <input type="checkbox" id="chk1"><label for="chk1">Remmeber me</label>
                            <div class="form-button text-center">
                                <button id="submit" type="submit" class="ibtn">Login</button>
                            </div>
                            <div class="text-center">
                                <a href="forget2.html">Forget password?</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_FooterPartial")
</body>
</html>