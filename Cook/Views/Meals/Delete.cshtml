@model Domain.Meal

@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Luc Joosten">
    <title>Easy Meal - Dashboard</title>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="~/css/landing.css" rel="stylesheet">
    <link href="~/css/dashboard.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation -->
    @await Html.PartialAsync("_NavbarPartial")
    <header>
        <div class="container">
            <div class="row">
                <div class="col-sm-8 offset-sm-2">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Meals" asp-action="Index">Meals</a></li>
                        <li class="breadcrumb-item">Delete</li>

                    </ol>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-sm-8 offset-sm-2">

                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <h4>Meal</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DateValid)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DateValid)
                        </dd>
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-2">
                            Starter
                        </dt>
                        @if (ViewBag.Starter != null)
                        {
                            <dd class="col-sm-10">
                                @ViewBag.Starter.Name
                            </dd>
                        }
                        else
                        {
                            <dd class="col-sm-10">
                                -
                            </dd>
                        }
                    </dl>
                    <dl class="row">
                        <dt class="col-sm-2">
                            Main
                        </dt>
                        @if (ViewBag.Main != null)
                        {
                            <dd class="col-sm-10">
                                @ViewBag.Main.Name
                            </dd>
                        }
                        else
                        {
                            <dd class="col-sm-10">
                                -
                            </dd>
                        }
                    </dl>

                    <dl class="row">
                        <dt class="col-sm-2">
                            Dessert
                        </dt>
                        @if (ViewBag.Dessert != null)
                        {
                            <dd class="col-sm-10">
                                @ViewBag.Dessert.Name
                            </dd>
                        }
                        else
                        {
                            <dd class="col-sm-10">
                                -
                            </dd>
                        }
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    @await Html.PartialAsync("_FooterPartial")
</body>
</html>
