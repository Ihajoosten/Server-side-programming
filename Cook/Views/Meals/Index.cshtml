@model IEnumerable<Domain.Meal>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Luc Joosten">
    <title>Meals</title>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="~/css/landing.css" rel="stylesheet">
    <link href="~/css/meal/index.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation -->
    @await Html.PartialAsync("_NavbarPartial")
    <header>
        <div class="container">
            <div class="row">
                <div class="col-sm-8 offset-sm-2">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Meals" asp-action="Index">Meals</a></li>
                        <li class="breadcrumb-item">Index</li>

                    </ol>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row offset-md-2">
            <div class="col-md-11 content">
                <a asp-controller="Meals" asp-action="Create"><button class="btn btn-outline-warning text-center">+ New Meal</button></a>
                <div class="row mt-4">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-5 card-header-pills m-1 mb-3">
                            <div class="card-body text-black-50">
                                @*<div class="row">
                                    <div class="col-md">*@
                                        <h6 class="card-title text-white-50 text-right">@item.DateValid.ToString("dd MMM yyyy")</h6>
                                        @if (item.Dishes.Count < 3)
                                        {
                                            <span><p cclass="card-text text-right" style="color: #ffa500; font-size: 12px"><i class="fas fa-exclamation-triangle" style="margin-right:5px;"></i>@item.Dishes.Count/3 meals</p></span>
                                        }
                                        else
                                        {
                                            <span><p class="card-text text-right" style="color: #ffa500; font-size: 12px"><i class="fas fa-check-circle" style="margin-right:5px;"></i>@item.Dishes.Count/3 meals</p></span>

                                        }
                                    @*</div>*@
                                    @*<div class="col-md">*@
                                        <ul class="text-white-50 mt-2" style="font-size: 12px;">
                                            @foreach (var mealDish in ViewBag.MealDishes)
                                            {
                                                @if (mealDish.MealId == item.Id)
                                                {
                                                    @foreach (var dish in ViewBag.Dishes)
                                                    {
                                                        @if (dish.Id == mealDish.DishId)
                                                        {
                                                            <li style="list-style: none;">- @dish.Name</li>
                                                        }
                                                    }
                                                }
                                            }
                                        </ul>
                                    @*</div>
                                </div>*@
                                <div class="text-center mt-4">
                                    <a asp-action="Edit"><button id="dishButton" class="btn btn-sm btn-outline-warning text-center">Edit</button></a>
                                    <a asp-action="Delete"><button id="dishButton" class="btn btn-sm btn-outline-danger text-center">Delete</button></a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    @await Html.PartialAsync("_FooterPartial")
</body>
</html>
